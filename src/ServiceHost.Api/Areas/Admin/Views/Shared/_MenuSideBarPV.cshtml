@using Framework.Domain.Cafe;
@using Framework.Application.Authentication

<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-left">
                <img src="~/AdminTheme/assets/images/users/avatar-1.jpg" alt="" class="thumb-md img-circle">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@User.Identity?.Name<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout"><i class="md md-settings-power"></i> خروج</a></li>
                    </ul>
                </div>

                <p class="text-muted m-0">@User.GetRoleName()</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="waves-effect active"><i class="md md-home"></i><span> داشبورد </span></a>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-store"></i><span> سیستم مشتریان  </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-area="Admin" asp-controller="Cafe" asp-action="FilterCafes" asp-route-status="@CafeStatus.Pending">  مشتریان در حال بررسی</a></li>
                        <li><a asp-area="Admin" asp-controller="Cafe" asp-action="FilterCafes" asp-route-status="@CafeStatus.Confirmed"> مشتریان تایید شده </a></li>
                        <li><a asp-area="Admin" asp-controller="Cafe" asp-action="FilterCafes" asp-route-status="@CafeStatus.Reject"> مشتریان رد شده </a></li>
                    </ul>
                </li>

                <li>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="waves-effect"><i class="fa fa-users"></i><span> مدیریت کاربران  </span></a>
                </li>

                <li>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="waves-effect"><i class="fa fa-tasks"></i><span> مدیریت دسته بندی ها  </span></a>
                </li>

                <li>
                    <a asp-area="Admin" asp-controller="Plan" asp-action="Index" class="waves-effect"><i class="md md-pages"></i><span> مدیریت طرح ها </span></a>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="fa fa-user"></i><span> سیستم مدیریت </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-area="Admin" asp-controller="Operator" asp-action="Index">اپراتورها</a></li>
                    </ul>
                </li>

                <li>
                    <a asp-area="Admin" asp-controller="Province" asp-action="Index" class="waves-effect"><i class="fa fa-building"></i><span> مدیریت استان ها </span></a>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-shopping-basket"></i><span> سیستم سفارشات</span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-area="Admin" asp-controller="Order" asp-action="Index">محصولات</a></li>
                    </ul>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="fa fa-cog"></i><span> سیستم تنظیمات </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-area="Admin" asp-controller="Setting" asp-action="Modify">تنظیمات</a></li>
                        <li><a asp-area="Admin" asp-controller="ContactUs" asp-action="Index">پیام ها</a></li>
                    </ul>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>