@using IranCafe.Application.Contract.CafeAgg
@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "دسته بندی ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right"></h4>
         <ol class="breadcrumb pull-right">
            <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">کافه ایران</a></li>
            <li class="active">@ViewData["title"]</li>
        </ol>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Action("Create", "Category")">ایجاد دسته بندی جدید</a>
        </p>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewData["Title"]</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 makeTableResponsive">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>لوگو</th>
                                    <th>عنوان</th>
                                    <th>اسلاگ</th>
                                    <th>توضیحات</th>

                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var entity in Model)
                                {
                                    <tr class="text-center">
                                        <td>@(count++)</td>
                                        <td><img src = "@entity.Logo"/></td>
                                        <td>@entity.Title</td>
                                        <td>@entity.Slug</td>
                                        <td>@entity.ShortDesc</td>

                                        <td style="text-align: center;">

                                            <a class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Action("Edit", "Category", new {id = entity.Id})">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}